{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Task: tsc watch",
            "command": "tsc",
            "type": "process",
            "args": ["-w", "-p", ".", "--noEmit"],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }
    ]
}
