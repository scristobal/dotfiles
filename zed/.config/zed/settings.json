// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "hover_popover_enabled": true,
  "which_key": {
    "enabled": true
  },
  "agent_servers": {
    "claude": {}
  },
  "show_edit_predictions": true,
  "format_on_save": "off",
  "edit_predictions": {
    "provider": "zed",
    "mode": "subtle"
  },
  "auto_install_extensions": {
    "nordic-theme": true,
    "html": true,
    "lua": true,
    "playdate": true,
    "make": true,
    "toml": true
  },
  "show_completions_on_input": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "show_turn_stats": true,
    "play_sound_when_agent_done": true,
    "favorite_models": [
      {
        "provider": "anthropic",
        "model": "claude-opus-4-6-1m-context-thinking-latest"
      },
      {
        "provider": "anthropic",
        "model": "claude-opus-4-6-1m-context-latest"
      },
      {
        "provider": "anthropic",
        "model": "claude-opus-4-6-latest"
      },
      {
        "provider": "anthropic",
        "model": "claude-opus-4-6-thinking-latest"
      }
    ],
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-6-latest"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-6-latest"
    }
  },
  "auto_signature_help": true,
  "inlay_hints": {
    "toggle_on_modifiers_press": {
      "control": true
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "project_panel": {
    "indent_size": 12,
    "indent_guides": {
      "show": "never"
    }
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "scrollbar": {
    "diagnostics": "none"
  },
  "minimap": {
    "show": "never"
  },
  // "ui_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "buffer_font_size": 12,
  "buffer_line_height": "comfortable",
  "ui_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Monobiome Dark"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_smartcase_find": false,
    "highlight_on_yank_duration": 200,
    "custom_digraphs": {}
  },
  "terminal": {
    "font_family": "JetBrainsMonoNL Nerd Font",
    "line_height": "standard"
  },
  "file_types": { "GLSL": ["*.glsl"] },
  "languages": {
    "TypeScript": {
      "formatter": {
        "external": {
          // bunx @biomejs/biome
          "command": "node_modules/.bin/biome",
          "arguments": [
            "format",
            "--write",
            "--use-server",
            "--stdin-file-path=something.ts",
            "<",
            "{buffer_path}"
          ]
        }
      }
    },
    "Python": {
      "language_servers": [
        // Disable basedpyright and enable ty, and otherwise
        // use the default configuration.
        "ty",
        "!basedpyright",
        "..."
      ]
    }
  }
}
